LABEL TIMESTAMP=${TIMESTAMP}
LABEL COMPONENT=${COMPONENT}
LABEL MODULE=${MODULE}
LABEL CUSTOMER=${CUSTOMER}
LABEL PROJECT=${PROJECT}
LABEL VERSION=2.0.0

ENTRYPOINT [ "/opt/com.gft.deuba.unity.release-1.frontend.fe-measure", "--staticdir", "/workdir/static", "--templatefile", "/workdir/index.html", "--version", "2.0.0" ]
